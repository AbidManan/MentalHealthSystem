<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="9dp"
        android:background="@color/innerColor"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".PatientFragments.FixAppointment">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="user's chosen survey:" />

        <TextView
            android:id="@+id/surveyResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#E4E4E4" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doctor Details:" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Vaibhav Mojidra"
            android:textColor="@color/mainTextColor"
            android:textSize="25sp"></TextView>

        <TextView
            android:id="@+id/spl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Specialization: "
            android:textColor="@color/mainTextColor"
            android:textSize="18sp"></TextView>

        <TextView
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Mumbai"
            android:textColor="@color/mainTextColor"
            android:textSize="18sp"></TextView>

        <TextView
            android:id="@+id/addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Address: sdfdsssssssssssssssssss"
            android:textColor="@color/mainTextColor"
            android:textSize="18sp"></TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#E4E4E4" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Appointment Date and Time:" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="19/12/120111"
            android:textColor="@color/mainTextColor"
            android:textSize="21sp"></TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/setdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_round_main_btn"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="Set Date"
            android:textColor="@color/innerColor"></androidx.appcompat.widget.AppCompatButton>

        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="19/12/120111"
            android:textColor="@color/mainTextColor"
            android:textSize="21sp"></TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/settime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_round_main_btn"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="Set Time"
            android:textColor="@color/innerColor"></androidx.appcompat.widget.AppCompatButton>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#E4E4E4" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/setappoinment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/custom_round_main_btn"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="Fix appointment"
            android:textColor="@color/innerColor" />


    </LinearLayout>

</androidx.core.widget.NestedScrollView>